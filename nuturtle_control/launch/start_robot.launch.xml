<?xml version="1.0"?>
<launch>
    <arg name="cmd_src" default="none" description="Values can be: circle: launch the circle node, teleop: launch keyoard teleop, node."></arg>
    <node name="turtle_control" pkg="nuturtle_control" exec="turtle_control">
        <param from="$(find-pkg-share nuturtle_description)/config/diff_prams.yaml" />
    </node>
    <group  if="$(eval '\'$(var cmd_src)\' == \'circle\'')">
        <node name="turtle_control" pkg="nuturtle_control" exec="circle">
            <param name="frequency" value="200"/>
        </node>
    </group>
    <group  if="$(eval '\'$(var cmd_src)\' == \'teleop\'')">
        <node name="teleop" pkg="teleop_twist_keyboard" exec="teleop_twist_keyboard"></node>
    </group>
    <group  if="$(eval '\'$(var cmd_src)\' == \'none\'')"/>

</launch>